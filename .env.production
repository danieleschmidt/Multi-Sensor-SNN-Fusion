# SNN Fusion Framework - Production Environment Configuration
# Copy this file to .env and customize for your deployment

# ================================
# API Configuration
# ================================
SNN_FUSION_API_HOST=0.0.0.0
SNN_FUSION_API_PORT=8000
SNN_FUSION_METRICS_PORT=8080
SNN_FUSION_WORKERS=4
SNN_FUSION_LOG_LEVEL=INFO
SNN_FUSION_ENV=production

# ================================
# Security Configuration
# ================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-too
API_RATE_LIMIT=1000
ENABLE_SECURITY_HEADERS=true

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://snnfusion:password@postgres:5432/snnfusion_prod
POSTGRES_DB=snnfusion_prod
POSTGRES_USER=snnfusion
POSTGRES_PASSWORD=your-postgres-password

# ================================
# Cache & Message Broker
# ================================
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-redis-password

# ================================
# Monitoring & Observability
# ================================
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your-grafana-admin-password

# SMTP Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# ================================
# Distributed Deployment
# ================================
ENABLE_DISTRIBUTED=false
MIN_NODES=1
MAX_NODES=10
DEPLOYMENT_REGION=us-east-1

# ================================
# Performance & Resources
# ================================
OPTIMIZATION_LEVEL=BALANCED
MAX_WORKERS=8
ENABLE_GPU=false
CUDA_VISIBLE_DEVICES=0

# Resource Monitoring Thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=85.0
DISK_THRESHOLD=90.0

# ================================
# Storage Configuration
# ================================
DATA_DIR=/app/data
MODELS_DIR=/app/models
LOGS_DIR=/app/logs
CACHE_DIR=/app/cache

# ================================
# Backup Configuration
# ================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ================================
# Neuromorphic Hardware (Optional)
# ================================
# Configure these if you have specialized neuromorphic hardware
ENABLE_LOIHI=false
LOIHI_DEVICE_ID=0
ENABLE_SPINNAKER=false
SPINNAKER_HOST=localhost
SPINNAKER_PORT=17893

# ================================
# Machine Learning Configuration
# ================================
MODEL_CACHE_SIZE=1000
DEFAULT_BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=1000
ENABLE_MODEL_QUANTIZATION=false

# ================================
# Globalization & Localization
# ================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
DEFAULT_TIMEZONE=UTC

# ================================
# External Integrations (Optional)
# ================================
# Weights & Biases
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=snn-fusion-production

# AWS S3 (for model storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# ================================
# Development & Testing (Disable in production)
# ================================
DEBUG=false
ENABLE_PROFILING=false
ENABLE_AUTO_RELOAD=false

# ================================
# Health Check Configuration
# ================================
HEALTH_CHECK_TIMEOUT=10.0
HEALTH_CHECK_INTERVAL=30.0