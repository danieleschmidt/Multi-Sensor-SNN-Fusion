# Multi-Sensor SNN-Fusion Environment Configuration

# Data Paths
DATA_DIR=./data
MODEL_DIR=./models
OUTPUT_DIR=./outputs
CACHE_DIR=./cache

# Database Configuration
DATABASE_TYPE=sqlite  # sqlite, postgresql, memory
DATABASE_PATH=./snn_fusion.db
# For PostgreSQL:
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=snn_fusion
# DATABASE_USER=snn_user
# DATABASE_PASSWORD=your_password

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
MEMORY_CACHE_SIZE=1000
MEMORY_CACHE_MB=512
DISK_CACHE_GB=10.0
ENABLE_CACHE_COMPRESSION=true

# Hardware Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_NUM_THREADS=8

# Neuromorphic Hardware
LOIHI_PARTITION=
LOIHI_SERVER_URL=
AKIDA_DEVICE=
AKIDA_RUNTIME_PATH=
SPINNAKER_HOST=
SPINNAKER_PORT=17893

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./outputs/snn_fusion.log
ENABLE_TENSORBOARD=true
TENSORBOARD_LOG_DIR=./outputs/tensorboard

# Experiment Tracking
WANDB_PROJECT=snn-fusion
WANDB_ENTITY=
WANDB_API_KEY=
MLF_TRACKING_URI=

# Development Configuration
DEBUG=false
PROFILE=false
ENABLE_CHECKPOINTING=true
CHECKPOINT_INTERVAL=10

# Data Processing
MAX_WORKERS=4
BATCH_SIZE=32
PREFETCH_FACTOR=2
PIN_MEMORY=true

# Model Configuration
DEFAULT_DEVICE=auto  # auto, cpu, cuda, cuda:0
MIXED_PRECISION=true
GRADIENT_CLIPPING=1.0

# Security
SECRET_KEY=your-secret-key-here
API_TOKEN=

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8888