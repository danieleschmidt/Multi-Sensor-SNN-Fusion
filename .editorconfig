# EditorConfig for SNN-Fusion Project
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,ts}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 100

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{cpp,c,h,hpp}]
indent_size = 2

[*.dockerfile,Dockerfile*]
indent_size = 2