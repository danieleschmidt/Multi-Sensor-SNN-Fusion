{
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=88"
  ],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.rulers": [88],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "*.toml": "toml",
    "*.py": "python",
    "Dockerfile*": "dockerfile",
    ".env*": "dotenv"
  },
  
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/dist": true,
    "**/build": true,
    "**/*.egg-info": true
  },
  
  "files.watcherExclude": {
    "**/data/**": true,
    "**/models/**": true,
    "**/checkpoints/**": true,
    "**/logs/**": true,
    "**/cache/**": true,
    "**/outputs/**": true,
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/venv/**": true,
    "**/.venv/**": true
  },
  
  "search.exclude": {
    "**/data": true,
    "**/models": true,
    "**/checkpoints": true,
    "**/logs": true,
    "**/cache": true,
    "**/outputs": true,
    "**/venv": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  
  "yaml.schemas": {
    "./schemas/experiment_config.json": "configs/experiments/*.yaml",
    "./schemas/model_config.json": "configs/models/*.yaml",
    "./schemas/training_config.json": "configs/training/*.yaml"
  },
  
  "json.schemas": [
    {
      "fileMatch": ["**/configs/**/*.json"],
      "url": "./schemas/config_schema.json"
    }
  ],
  
  // Jupyter settings
  "jupyter.askForKernelRestart": false,
  "jupyter.alwaysTrustNotebooks": true,
  "jupyter.sendSelectionToInteractiveWindow": true,
  
  // Git settings
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  
  // Extensions settings
  "autoDocstring.docstringFormat": "google",
  "autoDocstring.startOnNewLine": false,
  
  // Terminal settings
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\src"
  },
  
  // Task settings
  "tasks.showDecorations": true,
  
  // Debug settings
  "debug.console.fontSize": 12,
  "debug.console.lineHeight": 18,
  
  // Workbench settings
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.md": "vscode.markdown.preview.editor"
  },
  
  // Language specific settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnSave": true
  },
  
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false
  },
  
  // SNN-Fusion specific settings
  "snn-fusion.dataPath": "./data",
  "snn-fusion.modelPath": "./models",
  "snn-fusion.experimentTracking": "wandb",
  
  // Copilot settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "python": true
  }
}